{
  "name": "Charley Wong 和你查 小幫手",
  "version": "0.1",
  "description": "Display a button next to links that Charley Wong knows about.",
  "manifest_version": 2,
  "permissions": ["storage", "contextMenus", "notifications", "unlimitedStorage"],
  "background": {
    "scripts": ["Background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "favicon-16x16.png",
      "32": "favicon-32x32.png",
      "96": "favicon-96x96.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "exclude_matches": ["https://charleywong.giffon.io/*"],
      "js": ["Content.js"],
      "css": ["style.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "96": "favicon-96x96.png"
  }
}
