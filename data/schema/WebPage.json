{
    "$id": "WebPage.json",
    "type": "object",
    "properties": {
        "url": {
            "type": "string"
        },
        "name": {
            "$ref": "MultiLangString.json"
        },
        "meta": {
            "type": "object"
        },
        "hidden": {
            "type": "boolean"
        }
    },
    "required": [
        "url"
    ],
    "additionalProperties": false,
    "allOf": [
        {
            "if": {
                "properties": {
                    "url": {
                        "type": "string",
                        "pattern": "^https?:\/\/(?:www\\.|m\\.)?(?:facebook\\.com|fb\\.me|fb\\.com)\/"
                    }
                }
            },
            "then": {
                "properties": {
                    "url": {
                        "type": "string",
                        "pattern": "^https:\/\/www\\.facebook\\.com\/(?:[A-Za-z0-9\\._]+\/|groups\/.+)$"
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "url": {
                        "type": "string",
                        "pattern": "^https?:\/\/(?:www\\.)?twitter\\.com\/"
                    }
                }
            },
            "then": {
                "properties": {
                    "url": {
                        "type": "string",
                        "pattern": "^https:\/\/twitter\\.com\/[A-Za-z0-9\\._]+$"
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "url": {
                        "type": "string",
                        "pattern": "^https?:\/\/(?:www\\.|m\\.)??youtube\\.com\/"
                    }
                }
            },
            "then": {
                "properties": {
                    "url": {
                        "oneOf": [
                            {
                                "type": "string",
                                "pattern": "^https:\/\/www\\.youtube\\.com\/channel\/UC[A-Za-z0-9\\-_]+$"
                            },
                            {
                                "type": "string",
                                "pattern": "^https:\/\/www\\.youtube\\.com\/@[A-Za-z0-9]+$"
                            }
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "url": {
                        "type": "string",
                        "pattern": "^https?:\/\/[^/]+\/?$"
                    }
                }
            },
            "then": {
                "properties": {
                    "url": {
                        "type": "string",
                        "pattern": "^https?:\/\/[^/]+$"
                    }
                }
            }
        },
        {
            "properties": {
                "url": {
                    "type": "string",
                    "pattern": "^(?!https?:\/\/wa\\.me\/)"
                }
            }
        },
        {
            "properties": {
                "url": {
                    "type": "string",
                    "pattern": "^(?!https?:\/\/(?:[^.]*\\.)?whatsapp\\.com)"
                }
            }
        },
        {
            "properties": {
                "url": {
                    "type": "string",
                    "pattern": "^(?!https?:\/\/(www|s)\\.openrice\\.com\/)"
                }
            }
        },
        {
            "properties": {
                "url": {
                    "type": "string",
                    "pattern": "^(?!https?:\/\/linktr\\.ee\/)"
                }
            }
        },
        {
            "properties": {
                "url": {
                    "type": "string",
                    "pattern": "^(?!https?:\/\/bit\\.ly\/)"
                }
            }
        },
        {
            "properties": {
                "url": {
                    "type": "string",
                    "pattern": "^(?!https?:\/\/docs\\.google\\.com\/)"
                }
            }
        },
        {
            "properties": {
                "url": {
                    "type": "string",
                    "pattern": "^(?!https?:\/\/forms\\.gle\/)"
                }
            }
        },
        {
            "properties": {
                "url": {
                    "type": "string",
                    "pattern": "^(?!https?:\/\/goo\\.gl\/)"
                }
            }
        },
        {
            "properties": {
                "url": {
                    "type": "string",
                    "pattern": "^(?!https?:\/\/youtu\\.be\/)"
                }
            }
        }
    ]
}