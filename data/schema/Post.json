{
    "$id": "Post.json",
    "type": "object",
    "properties": {
        "url": {
            "type": "string"
        },
        "summary": {
            "$ref": "MultiLangString.json"
        },
        "meta": {
            "type": "object"
        }
    },
    "required": [
        "url"
    ],
    "additionalProperties": false,
    "allOf": [
        {
            "if": {
                "properties": {
                    "url": {
                        "type": "string",
                        "pattern": "^https?:\/\/(?:www\\.|m\\.)?(?:facebook\\.com|fb\\.me|fb\\.com)\/"
                    }
                }
            },
            "then": {
                "properties": {
                    "url": {
                        "type": "string",
                        "pattern": "^((?!pfbid).)*$"
                    }
                }
            }
        },
        {
            "properties": {
                "url": {
                    "type": "string",
                    "pattern": "^(?!https://www\\.facebook\\.com/[^/]+/posts/[^/]+/.+).*$"
                }
            }
        },
        {
            "properties": {
                "url": {
                    "type": "string",
                    "pattern": "^(?!https?://(?:www\\.)?hkcnews\\.com/).*"
                }
            }
        },
        {
            "properties": {
                "url": {
                    "type": "string",
                    "pattern": "^(?!https://www\\.facebook\\.com/login/).*"
                }
            }
        }
    ]
}