{
    "git.ignoreLimitWarning": true,
    "explorer.autoReveal": false,
    "json.schemas": [
        {
            "fileMatch": [
                "/data/entity/*.json"
            ],
            "url": "./data/schema/Entity.json"
        }
    ],
    "[json]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "files.exclude": {
        // too many files makes vscode slow
        "data/entity/*.json": true
    },
    "search.exclude": {
        // keep them searchable
        "data/entity/*.json": false
    }
}